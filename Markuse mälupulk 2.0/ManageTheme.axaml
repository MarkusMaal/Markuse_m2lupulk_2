<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Width="400" Height="180"
        x:Class="Markuse_mälupulk_2_0.ManageTheme"
        Title="Teema kohandamine" Icon="/Resources/setting.png">
  <Grid>
    <StackPanel>
      <Label FontSize="20" HorizontalAlignment="Center" Margin="0,10">Teema</Label>
      <WrapPanel HorizontalAlignment="Center">
        <Button Margin="5" Width="180" HorizontalContentAlignment="Center" Click="ChangeBgCol">Muuda tagaplaani värvi</Button>
        <Button Margin="5" Width="180" HorizontalContentAlignment="Center" Click="ChangeFgCol">Muuda esiplaani värvi</Button>
        <Button Margin="5" Width="180" HorizontalContentAlignment="Center" Click="LoadWallpaper">Muuda taustapilti</Button>
        <Button Margin="5" Width="180" HorizontalContentAlignment="Center" Click="SyncScheme">Laadi teema</Button>
      </WrapPanel>
    </StackPanel>
    <CheckBox Name="GradientsCheck" Click="GradientCheck_Click" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="15">Kasuta üleminekuefekte</CheckBox>
  </Grid>
</Window>
